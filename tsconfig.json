{
  "compilerOptions": {


    "target": "es2016",
    "lib": ["es6"],
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,

    "module": "commonjs",
    "rootDir": "src",
    "baseUrl": "./",
    "paths": {
      "@config/*": ["src/config/*"],
      "@modules/*": ["src/modules/*"],
      "@shared/*": ["src/shared/*"]
    },
    "typeRoots": [
      "@types","./node_modules/@types"
    ],

    "resolveJsonModule": true,
    "allowJs": true,

    "outDir": "build",

    "esModuleInterop": true,

    "strict": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,

    "skipLibCheck": true
  }
}
